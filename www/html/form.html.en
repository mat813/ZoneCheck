      <P>



	<SCRIPT language="JavaScript" type="text/javascript"> 
	  function validform(form) {
	    if (form["zone"].value.length == 0) {
	      alert("Zone Empty");
	      return 0;
	    } else {
	      return 1;
	    }
	  }

	  function do_check(form) {
	    if (validform(form))
	      form.submit();
	  }	  

	  function do_guess(form) {
	    form.action="";
  	    form.method="get";
	    if (validform(form))
	      form.submit();
	  }

	  function do_clear(form) {
	    form["zone"].value = "";
	    for (i = 0 ; i < 8 ; i++) {
	      form["ns" +i].value = "";
	      form["ips"+i].value = "";
	    }
	  }
	</SCRIPT>

	<INPUT type="submit" value=" Check! " onClick="do_check(this.form)">
	<INPUT type="button" value=" Guess "  onClick="do_guess(this.form)">
	<INPUT type="button" value=" Clear "  onClick="do_clear(this.form)">
	
