      <!-- Options -->
      <H2>Options</H2>
      <TABLE class="zc-options">
	<TR class="zc-title"><TD colspan="4">Sortie</TD></TR>
	  <TR>
	    <TD></TD>
	    <TD><INPUT type="checkbox" name="intro"    value='t' checked>
